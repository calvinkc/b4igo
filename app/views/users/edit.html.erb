<div class="agency-start-project-form">
  <%= form_tag "/users/#{@user.id}", method: :patch do %>
    <div class="container">
      <p><%= text_field_tag :firstname, @user.firstname.capitalize %> </p>
      <p><%= text_field_tag :lastname, @user.lastname.capitalize %> </p>
      <p><%= text_field_tag :email, @user.email %> </p>
      <%= submit_tag "Update User Details" %> 
    </div>
  <% end %>
</div>

<div class="container">
<br>
  <div class="row justify-content-center">
    <div>
      <center> <h2> Address Book </h2></center> <a href="/addresses/new"> <span class="ion-plus-circled"> New Address</span> </a>
        <table>
          <% @addresses.each do |address|  %> 
          <tbody>
            <tr>
              <td> <%= address.location.upcase + "   " + "  " %> 
              <%= form_tag "/addresses/" + address.id.to_s, method: :delete do %>
              <div class="pull-right "> <%= button_tag "Remove", :class => "btn-shadow btn-pill btn-pill-danger btn-pill-sm" %> </div>
              </td>
            </tr>
          </tbody>
            <% end %> 
          <% end %>
        </table>
    </div>
  </div>
</div>

<div class="agency-start-city-bg">
</div>

