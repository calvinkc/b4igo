<div class="agency-start-project-form">
  <%= form_tag "/users/#{@user.id}", method: :patch do %>
    <div class="container">
      <p><%= text_field_tag :firstname, @user.firstname.capitalize %> </p>
      <p><%= text_field_tag :lastname, @user.lastname.capitalize %> </p>
      <p><%= text_field_tag :email, @user.email %> </p>
      <%= submit_tag "Update User Details" %> 
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-md-6">
    <h3> Address Book</h3> <a href="/addresses/new"> <button>New Address</button> </a>
      <ul class="list-group">
        <% @addresses.each do |address|  %> 
          <li class="list-group-item"> <%= address.location.upcase + "   " + "  " %> 
          <%= form_tag "/addresses/" + address.id.to_s, method: :delete do %>
          <input type="submit" value="Remove">
          </li>
          <% end %> 
        <% end %>
      </ul>
  </div>
</div>


<div class="agency-start-city-bg">
</div>

